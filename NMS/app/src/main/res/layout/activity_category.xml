<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/drawerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#2196f3"
                android:id="@+id/toolbar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:paddingLeft="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Job"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="You have 2 missions that\nneed to be completed"
                                android:textColor="#dc3545"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_action_job"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <GridLayout
                    android:layout_weight="8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:padding="14dp">

                    <!-- Row 1-->
                    <!-- Col 1-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">
                        
                        <LinearLayout
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical"
                            android:weightSum="10"
                            android:gravity="center">

                            <ImageView
                                android:layout_weight="8"
                                android:layout_width="120dp"
                                android:layout_height="0dp"
                                android:src="@drawable/ic_action_exercise"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:layout_weight="2"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:text="Exercise"
                                android:textSize="18sp"
                                android:textColor="#666"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Col 2-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical"
                            android:weightSum="10"
                            android:gravity="center">

                            <ImageView
                                android:layout_weight="8"
                                android:layout_width="120dp"
                                android:layout_height="0dp"
                                android:src="@drawable/ic_action_homework"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:layout_weight="2"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:text="Homework"
                                android:textSize="18sp"
                                android:textColor="#666"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Row 2-->
                    <!-- Col 1-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical"
                            android:weightSum="10"
                            android:gravity="center">

                            <ImageView
                                android:layout_weight="8"
                                android:layout_width="120dp"
                                android:layout_height="0dp"
                                android:src="@drawable/ic_action_meeting"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:layout_weight="2"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:text="Meeting"
                                android:textSize="18sp"
                                android:textColor="#666"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Col 2-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical"
                            android:weightSum="10"
                            android:gravity="center">

                            <ImageView
                                android:layout_weight="8"
                                android:layout_width="120dp"
                                android:layout_height="0dp"
                                android:src="@drawable/ic_action_entertainment"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:layout_weight="2"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:text="Entertainment"
                                android:textSize="18sp"
                                android:textColor="#666"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <!-- Row 3-->
                    <!-- Col 1-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical"
                            android:weightSum="10"
                            android:gravity="center">

                            <ImageView
                                android:layout_weight="8"
                                android:layout_width="120dp"
                                android:layout_height="0dp"
                                android:src="@drawable/ic_action_job"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:layout_weight="2"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:text="My Job"
                                android:textSize="18sp"
                                android:textColor="#666"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </GridLayout>


            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            android:id="@+id/navigationView">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorAccent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_register_hero"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note Management System"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tranvudpqn123@gmail.com"
                        android:id="@+id/txtNameUser"
                        android:textColor="#fff"
                        android:textSize="16sp"/>

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="200dp">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listView"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="15dp"/>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listViewAccount"/>
            </LinearLayout>



        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>